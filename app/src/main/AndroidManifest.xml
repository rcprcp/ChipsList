<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cottagecoders.chipslist"
    android:versionCode="19"
    android:versionName="0.7.19">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.cottagecoders.chipslist.Store"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.AddStore"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.UpdateStore"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.UpdateItem"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.UpdateMasterItem"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.FindItem"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.DeleteUnusedItems"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.TripSummary"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.AddItem"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.About"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.Help"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.UpdateDepartment"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.PriceComparison"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.SelectAddressBook"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.MessageControl"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.DeleteCompareMenu"
            android:label="@string/app_name" />
        <activity
            android:name="com.cottagecoders.chipslist.ChipsList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
